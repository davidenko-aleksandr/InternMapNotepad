<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MapNotepad.Converters"
             xmlns:resources="clr-namespace:MapNotepad.Resources"
             x:Class="MapNotepad.Views.SignInPageView"             
             Title="{x:Static resources:AppResources.PageSignInTitle}">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:MultiTriggerButtonConverter x:Key="isButtonEnabled"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="25, 150, 25, 75">

        <StackLayout  HorizontalOptions="CenterAndExpand">

            <Entry x:Name="loginEntry"
                   Placeholder="{x:Static resources:AppResources.PagePlaceholderEmail}" 
                   WidthRequest="380"
                   Text="{Binding Email}"
                   Keyboard="Email"
            />
            <Entry x:Name="passwordEntry"
                   Placeholder="{x:Static resources:AppResources.PagePlaceholderPassword}" 
                   WidthRequest="380"
                   IsPassword ="True" 
                   Text="{Binding Password}"
            />
        </StackLayout>

        <StackLayout VerticalOptions="End" HorizontalOptions="Center">
            <Button Text="{x:Static resources:AppResources.PageButtonSignIn}"
                        WidthRequest="380"
                        HeightRequest="50"
                        Command="{Binding EnterCommand}"
                        IsEnabled="False">

                <Button.Triggers>
                    <MultiTrigger TargetType="Button">
                        <MultiTrigger.Conditions>
                            
                            <BindingCondition Binding="{Binding Source={x:Reference loginEntry},
                                    Path=Text.Length,
                                    Converter={StaticResource isButtonEnabled}}"
                                    Value="true" 
                            />
                            <BindingCondition Binding="{Binding Source={x:Reference passwordEntry},
                                    Path=Text.Length,
                                    Converter={StaticResource isButtonEnabled}}"
                                    Value="true" 
                            />
                        </MultiTrigger.Conditions>
                        
                        <Setter Property="IsEnabled" Value="True"/>
                    </MultiTrigger>
                </Button.Triggers>
            </Button>

            <Label HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{x:Static resources:AppResources.PageButtonHyperLink}"
                            TextColor="{DynamicResource NavigationBarColor}"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToSignUpPageCommand}"/>
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </Grid>
</ContentPage> 